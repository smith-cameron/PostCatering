INQUIRY_ALLOWED_EMAIL_DOMAINS=
INQUIRY_REQUIRE_EMAIL_DOMAIN_DNS=false
INQUIRY_ABUSE_ALERT_THRESHOLD_PER_MINUTE=10
INQUIRY_ABUSE_ALERT_WINDOW_SECONDS=60
INQUIRY_INTEGRITY_FIELD=company_website
